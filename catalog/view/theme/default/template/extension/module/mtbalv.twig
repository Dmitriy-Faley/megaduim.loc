<div>
  {% if items %}
	<section class="popular-categories-wrap">
		<div class="popular-categories">
        {% for item in items %}
			  <div class="popular-categories__item {% if item.css and item.css != '' %}{{ item.css }}{% endif %} d-kva {% if item.wide and item.long %} popular-categories__item--kvadrat {% elseif item.wide and not item.long %} popular-categories__item--wide {% elseif  item.long and not item.wide %} popular-categories__item--long  {% elseif  not item.long and not item.wide %} popular-categories__item-wide-long {% endif %}">
			  {% if item.icon %}
				<a  class="pop-cat-card pop-cat-card--background-7"{% if item.link %} href="{{ item.link }}"  {% endif %}>
          
          
         
					<img class="pop-cat-card__image" loading="lazy" src="{{ item.icon }}" alt="{{ item.title }}" width="100%" height="100%">
				
					{% endif %}
					<div class="pop-cat-card__labels">
						<div class="card-labels">
                        {% if item.special %}
						<div class="card-labels__item">
							<div class="card-label card-label--green">{{ item.special }}</div>
						</div>
						{% endif %}
						<div class="card-labels__item">
							<div class="card-title">{{ item.title }}</div>
						</div>
						</div>
					</div>
				</a>
			  </div>			
		{% endfor %}
		</div>
	</section>
{% endif %}
</div>