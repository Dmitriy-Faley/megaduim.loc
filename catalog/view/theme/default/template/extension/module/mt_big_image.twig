
{% if items %}
	<div class="mt-module mtbig">		

		<div class="mtbig-left">			
			<div class="mtbig-left__text">					
				<div class="mtbig-left_header">
					{{ name }}
				</div>
				<div class="mtbig-left_link">
					<a href="{{ link }}">{{ sub_title }}</a>
				</div>

				{% for item in items %}	
					<div class="mtbig-left_item">
						<div class="mtbig-left_item__img">
							<img src="{{ item.icon }}" alt="{{ item.title }}" loading="lazy" draggable="false" class="features-item__icon ico-1" width="100%" height="100%">
						</div>
						<div class="mtbig-left_item__txt">
							<div class="mtbig-left_item__header">{{ item.title }}</div>
							<div class="mtbig-left_item__desc">{{ item.text }}</div>
						</div>
					</div>
				{% endfor %}
			</div>	
		</div>	
		<div class="mtbig-right">
			<div class="mtbig-right__img">					
				<img src="{{ icon }}" loading="lazy" alt="{{ name }}" title="{{ name }}" width="100%" height="100%">
			</div>		
		</div>
		
	</div>
{% endif %}