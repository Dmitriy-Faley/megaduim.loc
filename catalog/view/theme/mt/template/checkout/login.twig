<h2>{{ text_new_customer }}</h2>
<p>{{ text_checkout }}</p>
<label class="checkout_option">
  <div class="checkout_option__block">
    {% if account == 'register' %}
    <input type="radio" name="account" value="register" checked="checked" />
    {% else %}
    <input type="radio" name="account" value="register" />
    {% endif %}
    <div class="checkout_option__wrap">
      <p class="checkout_option__title">{{ text_register }}</p>
    </div>
  </div>
</label>


{% if checkout_guest %}
<label class="checkout_option">
  <div class="checkout_option__block">
    {% if account == 'guest' %}
    <input type="radio" name="account" value="guest" checked="checked" />
    {% else %}
    <input type="radio" name="account" value="guest" />
    {% endif %}
    <div class="checkout_option__wrap">
      <p class="checkout_option__title">{{ text_guest }}</p>
    </div>
  </div>
</label>
{% endif %}

<p>{{ text_register_account }}</p>

<input type="button" value="{{ button_continue }}" id="button-account" data-loading-text="{{ text_loading }}"
  class="checkout_total__btn btn btn--filled" />




