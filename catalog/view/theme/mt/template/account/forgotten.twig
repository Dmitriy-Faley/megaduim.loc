          <label class="input_wrapper__label">Пароль</label>
          <div class="input_wrapper__tooltip" data-input-tooltip=""></div>
        </div> -->
        <!-- <button class="footer_table__form_btn btn btn--filled is-disabled">
          <span class="btn__text">Выслать пароль</span>
        </button> -->
        <input type="submit" value="выслать пароль " class="footer_table__form_btn btn btn--filled" />
      </div>
      <p class="login__text">
        <a class="link" href="{{ login }}">Войти</a> или
        <a class="link" href="{{ register }}">зарегистрироваться</a>
      </p>
    </div>
  </form>
  {% if error_warning %}
  <div class="login__bottom">
    <p class="login__text">{{ error_warning }}</p>
  </div>
  {% endif %}
</section>


