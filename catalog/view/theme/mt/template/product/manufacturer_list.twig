{{ header }}
<!-- BEGIN CONTENT -->

<section class="brands">
  <div class="brands__breadcrumbs breadcrumbs">
    {% for breadcrumb in breadcrumbs %}
      <a class="breadcrumbs__link  {% if breadcrumb == breadcrumbs|last %} is-active {% endif %}"
          href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
      {% if breadcrumb != breadcrumbs|last %}
      <span class="slash">/</span>
      {% endif %}
    {% endfor %}
  </div>
  <h1 class="section_block__title">Каталог брендов</h1>
  <!-- <div class="catalog_search_mobile">
    <svg class="icon">
      <use xlink:href="#icon_search"></use>
    </svg>
    <input class="catalog_search_mobile__input" type="search" name="catalog_search" placeholder="Искать бренд...">
  </div> -->
  {{ column_left }}

  <div class="brands__content">

  {% for key, category in categories %}
    {% for item in category.manufacturer %}
    
        {#% if item.count > 0 % #}
        <a class="brands_slide brands_slide--page" data-manafacturer-link="{{ key }}" href="{{ item.href }}">
          <div class="brands_slide__pic">
            <picture class="image">
            <!--  <source data-lazy="data-lazy" data-srcset="{{ item.thumb }}" type="image/webp" /> -->
              <img class="image" data-lazy="data-lazy" data-src="{{ item.thumb }}" alt="{{ item.name }}" title="{{ item.name }}">
            </picture>

          </div>
          <div class="brands_slide__info">
            <p class="brands_slide__text brands_slide__text--big">{{ item.name }}</p>

            {% if item.description %}
            <p class="brands_slide__text">{{ item.description }}</p>
            {% endif %}
          </div>
        </a>
        {#% endif %#}
      {% endfor %}
  {% endfor %}
    
  </div>

  {% if pagination %}
    <div class="catalog_inner__pagination pagination">
        {% if pagCustom.last != pagCustom.page %}
            <a href="{{ pagCustom.url }}" class="pagination__btn_more btn btn--grey"><span class="btn__text">Показать ещё</span></a>
        {% endif %}
        {{ pagination }}
    </div>
    {% endif %}
</section>



