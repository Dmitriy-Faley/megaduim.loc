      e.preventDefault();
      var $a = $(this);
      var key = $a.attr('data-key');
      var resetActive = $a.hasClass('active');
      $links.removeClass('active');
      var $brand_list = $('.brands-list__item').removeClass('hidden');

      if (resetActive) {

      } else {
        $a.addClass('active');
        $brand_list.addClass('hidden');
        $brand_list.filter('[data-manafacturer-link="' + key + '"]').removeClass('hidden');

        var $el = $('.brands-list__item[data-manafacturer-link="' + key + '"]:first');
        if ($el.length) {
          var scrollTo = $el.offset().top;
          if ($('body').hasClass('home-page')) {
            scrollTo -= $('.m-header__top').height();
          }
          //                 $("html, body").stop().animate({scrollTop: scrollTo }, 'fast');
        }
      }




    });
  });
</script>
