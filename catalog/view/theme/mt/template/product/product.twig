{{ header }}


<section class="product_page" id="beginning" data-scroll-id="beginning">
    <div class="product_page__breadcrumbs breadcrumbs">
        {% for breadcrumb in breadcrumbs %}
        <a class="breadcrumbs__link  {% if breadcrumb == breadcrumbs|last %} is-active {% endif %}"
            href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
        {% if breadcrumb != breadcrumbs|last %}
        <span class="slash">/</span>
        {% endif %}
        {% endfor %}
    </div>
    <h1 class="section_block__title">{{ heading_title }}</h1>
    <div class="product_page__content" id="product">
        <div class="product_page__gallery">
            {% if attribute_groupsProd %}
                {% for attribute_group in attribute_groupsProd %}
                    
                    {% if attribute_group.attribute_group_id == 32 %}
                        {% for attribute in attribute_group.attribute %}
                            {% if attribute.attribute_id == 50 %}
                                <div class="product_page__tag is-new">
                                    <svg class="bg">
                                        <use xlink:href="#tag"></use>
                                    </svg>
                                    <div class="text">новинка</div>
                                </div> 
                            {% endif %}
                            {% if attribute.attribute_id == 51 %}
                                <div class="product_page__tag is-hit">
                                    <svg class="bg">
                                        <use xlink:href="#tag"></use>
                                    </svg>
                                    <div class="text">Хит</div>
                                </div> 
                            {% endif %}
                            {% if attribute.attribute_id == 52 %}
                                <div class="product_page__tag is-promo">
                                    <svg class="bg">
                                        <use xlink:href="#tag"></use>
                                    </svg>
                                    <div class="text">Акция</div>
                                </div> 
                            {% endif %}
                        {% endfor %}  
                    {% endif %}
                {% endfor %}
            {% endif %}


            <div class="product_page__gallery_wrap">
                {% for image in imagesMain %}
                <a href="{{ image.additional }}" data-fancybox="prod" class="product_page__gallery_pic">
                    <picture class="image">
                        <source data-lazy="data-lazy" data-srcset="{{ image.additional }}" type="image/jpg" />
                        <img class="image" data-lazy="data-lazy" data-src="{{ image.additional }}"
                            alt="{{ heading_title }}" />
                    </picture>
                </a>
                {% endfor %}
            </div>
            <div class="product_page__slider slider swiper">
                <div class="swiper-wrapper">
                    {% for imageq in imagesMain %}
                    <a href="{{ imageq.additional }}" data-fancybox="prodMob" class="product_page__gallery_pic swiper-slide">
                        <picture class="image">
                            <source data-lazy="data-lazy" data-srcset="{{ imageq.additional }}" type="image/webp" />
                            <img class="image" data-lazy="data-lazy" data-src="{{ imageq.additional }}"
                                alt="{{ heading_title }}" />
                        </picture>
                    </a>
                    {% endfor %}
                </div>
                <div class="product_page__slider_pagination"></div>
            </div>
        </div>
        <div class="product_page_info">
            <div class="product_page_info__container">
                <div class="product_page_info__block product_page_info__block--fix">


                    {% if stock == 'В наличии' %}
                            <span
                        class="product_page_info__text product_page_info__text--small in-stock" data-color="green">{{ stock }}</span>
                            {% elseif stock == 'Нет в наличии' %} 
                            <span
                        class="product_page_info__text product_page_info__text--small in-stock" data-color="red">{{ stock }}</span>
                            {% elseif stock == 'Ожидание 2-3 дня' %} 
                            <span
                        class="product_page_info__text product_page_info__text--small in-stock" data-color="blue">{{ stock }}</span>
                            {% elseif stock == 'Предзаказ' %}
                            <span
                        class="product_page_info__text product_page_info__text--small in-stock" data-color="blue">{{ stock }}</span>
                    {% endif %}


                    <p class="product_page_info__title">{{ heading_title }}</p>
                    {% if price %}
                    {% if special %}
                    <div class="product_page_info__line"> <span class="product_page_info__price">{{ special }}
                            руб</span>
                        <span class="product_page_info__price old">{{ price }} руб</span>
                    </div>
                    {% endif %}
                    {% endif %}
                    <p class="product_page_info__text">
                        {{ description }}
                    </p>
                    <div class="product_page_info__buttons product_page_info__buttons--page">

                        {% if stock == 'В наличии' or stock == 'Предзаказ' %}
                        {% if theme_mt_product_cart_checked %}
                        <div class="product_page_info__buttons_wrap">

                            {% if theme_mt_product_cart_quantity_checked %}
                            <div class="product_page_counter">
                                <button class="product_page_counter__btn product_page_counter__btn--minus">
                                    <svg class="icon">
                                        <use xlink:href="#minus"></use>
                                    </svg>
                                </button>
                                <p class="product_page_counter__text">количество:
                                    <input type="number" pattern="[0-9]+" min="1" max="10" readonly
                                        class="number-amount" name="quantity" value="{{ minimum }}" size="2"
                                        id="input-quantity">
                                </p>
                                <button class="product_page_counter__btn product_page_counter__btn--plus">
                                    <svg class="icon">
                                        <use xlink:href="#plus"></use>
                                    </svg>
                                </button>
                            </div>
                            {% else %}
                            <input type="hidden" name="quantity" value="{{ minimum }}" size="2" id="input-quantity">
                            {% endif %}

                            <button type="button" id="button-cart" data-loading-text="{{ text_loading }}"
                                class="product_page_info__btn product_page_info__btn--cart btn btn--filled btn--icon_right">
                                <span class="btn__text btn__text--initial">добавить в корзину</span>
                                <span class="btn__text btn__text--added">в корзине</span>
                                <svg class="btn__icon btn__icon--initial btn__icon--white btn__icon--right">
                                    <use xlink:href="#cart"></use>
                                </svg>
                                <svg class="btn__icon btn__icon--added btn__icon--black btn__icon--right">
                                    <use xlink:href="#icon_okay"></use>
                                </svg>
                            </button>
                            <input type="hidden" name="product_id" value="{{ product_id }}" />

                        </div>
                        {% endif %}
                        {% endif %}
                        {% for itemInfo in dopInfoProduct %}
                            {% if logged %}
                            <button class="product_page_info__btn add-wish product_page_info__btn--fav btn btn--grey btn--icon_right {% if itemInfo.in_wishlist %} is-added{% endif %}"
                                onclick="{% if itemInfo.in_wishlist %}wishlist_remove('{{ itemInfo.product_id }}');{% else %}wishlist_add('{{ itemInfo.product_id }}');{% endif %} return false;"
                            {% if not logged %}data-login="false" {% else %}data-login="true" {% endif %}>
                                <span class="btn__text btn__text--initial">избранное</span>
                                <span class="btn__text btn__text--added">в избранном</span>
                            <svg class="btn__icon btn__icon--initial btn__icon--black btn__icon--right">
                                <use xlink:href="#heart"></use>
                                </svg>
                                <svg class="btn__icon btn__icon--added btn__icon--red btn__icon--right">
                                <use xlink:href="#heart_red"></use>
                                </svg>
                            </button>
                            {% else %}
                            <button class="product_page_info__btn--fav btn btn--grey btn--icon_right" style="width: 100%; height: 3.8571428571em;"  data-linked-modal="modal_wishlistErr">
                                <span class="btn__text--initial">избранное</span>
                                <svg class="btn__icon btn__icon--initial btn__icon--black btn__icon--right">
                                    <use xlink:href="#heart"></use>
                                </svg>
                            </button>
                            {% endif %} 
                        {% endfor %}
                        

                       <!-- {% if theme_mt_product_wishlist_checked %}
                        <button class="product-adds add-bookmark product-like {% if in_wishlist %}added{% endif %}"
                            onclick="{% if in_wishlist %}wishlist_remove('{{ product_id }}');{% else %}wishlist_add('{{ product_id }}');{% endif %} return false;"
                            {% if not logged %}data-login="false" {% else %}data-login="true" {% endif %}>
                            {{ theme_mt_product_wishlist }}
                        </button>
                        {% endif %}-->
                    </div>
                </div>

                {% if attribute_groupsProd %}
                    {% for attribute_group in attribute_groupsProd %}
                        {% if attribute_group.attribute_group_id == 29 %}
                            <div  class="product_page_info__block product_page_info__block--scroll">
                                <p class="product_page_info__caption">Выберите цвет</p>
                                <div class="product_page_info__colors">
                                    {% for attribute in attribute_group.attribute %}
                                    <a href="{{ hrefPiece }}{{ attribute.text }}" class="product_page_info__colors_btn">
                                        <p class="text">{{ attribute.name }}</p>
                                    </a>
                                    {% endfor %}
                                </div>
                                <div class="select select--outlined product_page_info__select" data-dropdown=""
                                    data-dropdown-name="colors" data-dropdown-placeholder="Выбрать" data-dropdown-readonly="true"
                                    data-dropdown-options="[{&quot;key&quot;:&quot;Чёрный&quot;,&quot;value&quot;:&quot;Чёрный&quot;},{&quot;key&quot;:&quot;Красный&quot;,&quot;value&quot;:&quot;Красный&quot;},{&quot;key&quot;:&quot;Белый&quot;,&quot;value&quot;:&quot;Белый&quot;},{&quot;key&quot;:&quot;Оранжевый&quot;,&quot;value&quot;:&quot;Оранжевый&quot;}]">
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %} 
                {% endif %}


                {% if attribute_groupsProd %}
                {% for attribute_group in attribute_groupsProd %}
                {% if attribute_group.attribute_group_id == 7 %}
                <div class="product_page_info__block product_page_info__block--scroll">
                    <div class="product_page_info_dropdown" data-dropdown-block="">

                        <div class="product_page_info_dropdown__top" data-dropdown-block-btn>
                            <p class="product_page_info__caption">{{ attribute_group.name }}</p>
                            <svg class="icon">
                                <use xlink:href="#link_arrow"></use>
                            </svg>
                        </div>
                        <div class="product_page_info_dropdown__content">
                            {% for attribute in attribute_group.attribute %}
                            {% if attribute.name == 'Ширина' %}
                            <div class="product_page_size_block">
                                <div class="product_page_size_block__pic"><img class="image"
                                        data-src="/image/catalog/assets/img/glasses_size_1.svg" alt="" data-lazy="" />
                                </div>
                                <p class="product_page_size_block__text">{{ attribute.name }}:</p>
                                <p class="product_page_size_block__text">{{ attribute.text }}</p>
                            </div>
                            {% endif %}
                            {% if attribute.name == 'Длина дужки' %}
                            <div class="product_page_size_block">
                                <div class="product_page_size_block__pic">
                                    <img class="image" data-src="/image/catalog/assets/img/glasses_size_2.svg" alt=""
                                        data-lazy="" />
                                </div>
                                <p class="product_page_size_block__text">{{ attribute.name }}:</p>
                                <p class="product_page_size_block__text">{{ attribute.text }}</p>
                            </div>
                            {% endif %}
                            {% if attribute.name == 'Высота линзы' %}
                            <div class="product_page_size_block">
                                <div class="product_page_size_block__pic"><img class="image"
                                        data-src="/image/catalog/assets/img/glasses_size_3.svg" alt="" data-lazy="" />
                                </div>
                                <p class="product_page_size_block__text">{{ attribute.name }}:</p>
                                <p class="product_page_size_block__text">{{ attribute.text }}</p>
                            </div>
                            {% endif %}
                            {% if attribute.name == 'Ширина линзы' %}
                            <div class="product_page_size_block">
                                <div class="product_page_size_block__pic"><img class="image"
                                        data-src="/image/catalog/assets/img/glasses_size_4.svg" alt="" data-lazy="" />
                                </div>
                                <p class="product_page_size_block__text">{{ attribute.name }}:</p>
                                <p class="product_page_size_block__text">{{ attribute.text }}</p>
                            </div>
                            {% endif %}
                            {% if attribute.name == 'Длина моста' %}
                            <div class="product_page_size_block">
                                <div class="product_page_size_block__pic"><img class="image"
                                        data-src="/image/catalog/assets/img/glasses_size_5.svg" alt="" data-lazy="" />
                                </div>
                                <p class="product_page_size_block__text">{{ attribute.name }}:</p>
                                <p class="product_page_size_block__text">{{ attribute.text }}</p>
                            </div>
                            {% endif %}

                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endif %}
                {% endfor %}
                {% endif %}


                {% if attribute_groupsProd %}
                    {% for attribute_group in attribute_groupsProd %}
                        {% if attribute_group.attribute_group_id == 8 %}
                            <div class="product_page_info__block product_page_info__block--scroll">
                                <div class="product_page_info_dropdown" data-dropdown-block="">
                                    <div class="product_page_info_dropdown__top" data-dropdown-block-btn>
                                        <p class="product_page_info__caption">{{ attribute_group.name }}</p>
                                        <svg class="icon">
                                            <use xlink:href="#link_arrow"></use>
                                        </svg>
                                    </div>
                                    <div class="product_page_info_dropdown__content">
                                        {% for attribute in attribute_group.attribute %}
                                        <div class="product_page_characteristics_block">
                                            <p class="product_page_characteristics_block__text">{{ attribute.name }}</p>
                                            <p class="product_page_characteristics_block__text">{{ attribute.text }}</p>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endif %}

                <div class="product_page_info__block product_page_info__block--scroll">
                    <div class="product_page_info_dropdown" data-dropdown-block="">
                        <div class="product_page_info_dropdown__top" data-dropdown-block-btn>
                            <p class="product_page_info__caption">Гарантия</p>
                            <svg class="icon">
                                <use xlink:href="#link_arrow"></use>
                            </svg>
                        </div>
                        <div class="product_page_info_dropdown__content product_page_info_dropdown__content--38">
                            <p class="product_page_characteristics_block__text">Гарантия на все очки и на данную модель
                                распространяется на все очки и линзы, как изготовленные в нашей компании, так и от
                                сторонних брендов, в том числе и на продукцию заводов «Оптикс» и «Гелиос».</p>
                        </div>
                    </div>
                </div>
                
                <div class="product_page_info__block product_page_info__block--scroll">
                    <p class="product_page_info__caption">Помощь</p>
                    <div class="product_page_info__help_buttons">
                        <button class="product_page_info__help_btn btn btn--outlined"
                            data-linked-modal="modal_try_on"><span class="btn__text">Как померить?</span></button>
                            <a class="product_page_info__help_btn btn btn--outlined" href="/receipt"><span
                                class="btn__text">изготовление по рецепту</span></a>
                    </div>
                </div>
                <div class="product_page_info__block product_page_info__block--scroll">
                    <p class="product_page_info__caption">Поделиться с друзьями</p>
                    <div class="product_page_info__help_buttons product_page_info__help_buttons--socials">
                                <!--<a class="product_page_info__socials_btn" target="_blank" href="/">
                                    <img class="image" data-src="/image/catalog/assets/img/icon_inst.svg" alt="" data-lazy="" />
                                </a>-->
                                {% for itemShare in dopInfoProduct %}
                                    <a class="product_page_info__socials_btn" target="_blank" href="https://t.me/share/url?url={{itemShare.url}}&text={{heading_title}}&image={{itemShare.image}}">
                                        <img class="image" data-src="/image/catalog/assets/img/icon_tg.svg" alt="" data-lazy="" />
                                    </a>
                                    <a class="product_page_info__socials_btn" target="_blank" href="https://vk.com/share.php?url={{itemShare.url}}&title={{heading_title}}&image={{itemShare.image}}&noparse=true">
                                        <img class="image" data-src="/image/catalog/assets/img/icon_vk.svg" alt="" data-lazy="" />
                                    </a>
                                    <a class="product_page_info__socials_btn" target="_blank" href="https://www.facebook.com/sharer.php?u={{itemShare.url}}","sharer","status=0,toolbar=0,width=650,height=500">
                                        <img class="image" data-src="/image/catalog/assets/img/icon_fb.svg" alt="" data-lazy="" />
                                    </a>
                                    <a class="product_page_info__socials_btn" target="_blank" href="https://connect.ok.ru/offer?url={{itemShare.url}}&title={{heading_title}}">
                                        <img class="image" data-src="/image/catalog/assets/img/icon_ok.svg" alt="" data-lazy="" />
                                    </a>
                                    <a class="product_page_info__socials_btn" target="_blank" href="https://twitter.com/intent/tweet?text={{heading_title}}&url={{itemShare.url}}">
                                        <img class="image" data-src="/image/catalog/assets/img/icon_tw.svg" alt="" data-lazy="" />
                                    </a>
                                    <a class="product_page_info__socials_btn" target="_blank" href="https://pinterest.com/pin/create/button/?url={{itemShare.url}}&description={{heading_title}}">
                                        <img class="image" data-src="/image/catalog/assets/img/icon_pin.svg" alt="" data-lazy="" />
                                    </a>
                                    <a class="product_page_info__socials_btn" target="_blank" href="https://api.whatsapp.com/send?text={{heading_title}}">
                                        <img class="image" data-src="/image/catalog/assets/img/icon_wa.svg" alt="" data-lazy="" />
                                    </a>
                                {% endfor %}

 
                                
                            </div>
                </div>
            </div>
            <div class="product_page_info__container">
                <div class="product_page_info__block product_page_info__block--scroll">
                    <p class="product_page_info__title">Бесплатная консультация</p>
                    <p class="product_page_info__text product_page_info__text--margin14">Оставьте заявку на
                        консультацию, <br class="mobile"> и мы перезвоним вам.</p>
                    <form class="product_page_info_form form ajax_form" id="questionProduct"  action="javascript();" data-mailer=""
                        data-form-id="product_page_form">
                        <input type="hidden" name="form" value="Бесплатная консультация ({{heading_title}})">
                        <div class="product_page_info_form__inputs">
                            <div class="input_wrapper input_wrapper--textarea_grey" data-input-wrapper="">
                                <textarea class="input_wrapper__textarea" name="question"
                                    placeholder="Ваш вопрос"></textarea>
                            </div>
                            <p class="input_wrapper__input-err"></p>
                            <div class="input_wrapper input_wrapper--outlined" data-input-wrapper="">
                                <input class="input_wrapper__input input_wrapper__input--12" type="text" name="name"
                                    required autocomplete="off">
                                <label class="input_wrapper__label input_wrapper__label--12">Ваше имя</label>
                                <div class="input_wrapper__tooltip" data-input-tooltip=""></div>
                            </div> 
                            <p class="input_wrapper__input-err"></p>
                            <div class="input_wrapper input_wrapper--outlined" data-input-wrapper="">
                                <input class="input_wrapper__input input_wrapper__input--12" type="tel" name="phone"
                                    required autocomplete="off">
                                <label class="input_wrapper__label input_wrapper__label--12">Номер телефона</label>
                                <div class="input_wrapper__tooltip" data-input-tooltip=""></div>
                            </div>
                            <p class="input_wrapper__input-err"></p>
                        </div>
                        <div class="product_page_info_form__bottom">
                            <p class="product_page_info_form__text">Нажимая на кнопку, вы даёте своё соглашение <br
                                    class="desktop"> на обработку персональных данных</p>
                            <button class="product_page_info_form__btn btn btn--filled"><span
                                    class="btn__text">отправить</span></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="product_page_info__block product_page_info__block--last"><a
                    class="product_page_info__up_btn btn btn--filled" href="/#beginning" data-anchor="beginning">
                    <div class="text">подняться наверх</div>
                    <svg class="icon_up">
                        <use xlink:href="#link_arrow"></use>
                    </svg>
                </a></div>
        </div>
    </div>
</section>

{% if products_variant %}
<section class="hits">
    <div class="hits__top">
        <h2 class="section_block__title section_block__title--small">Похожие товары</h2>
        <div class="hits__nav slider__buttons">
            <button class="slider__button slider__button--prev hits__nav_btn--prev">
                <svg class="icon">
                    <use xlink:href="#link_arrow"></use>
                </svg>
            </button>
            <button class="slider__button slider__button--next hits__nav_btn--next">
                <svg class="icon">
                    <use xlink:href="#link_arrow"></use>
                </svg>
            </button>
        </div>
    </div>
    <div class="hits__slider slider swiper">
        <div class="swiper-wrapper">
            {% for product_variant in products_variant %}
            <div class="hits_slide swiper-slide">
                <div class="hits_slide__pic" data-linked-modal="modal_card">
                    <div class="hits_slide__pic_wrap" data-hover-images="">
                        <img class="image" data-lazy data-src="{{ product_variant.thumb }}" alt="{{ heading_title }}">
                        {% for img in product_variant.imgDop %}
                            <img class="image" data-lazy data-src="{{ img.thumb }}" alt="{{ heading_title }}">
                        {% endfor %}
                    </div>
                    <img class="loader" data-src="/image/catalog/assets/img/loader.svg" alt="" data-lazy="" />
                    <div class="hits_slide__hover_btn btn btn--filled">Быстрый просмотр</div>
                    <button class="hits_slide__btn hits_slide__btn--mob"><img class="image image__empty"
                            data-src="/image/catalog/assets/img/icon_fav_empty.svg" alt="" data-lazy="" /><img
                            class="image image__active" data-src="/image/catalog/assets/img/icon_fav_active.svg" alt=""
                            data-lazy="" />
                    </button>
                </div>
                <a href="{{ product_variant.href }}" class="hits_slide_mobile btn btn--filled">
                    Подробнее
                </a>
                <div class="hits_slide__info">
                    <div class="hits_slide__left" data-linked-modal="modal_card">
                        <p class="hits_slide__text hits_slide__text-name hits_slide__text--big">{{ product_variant.name }}</p>
                        <p class="hits_slide__text">
                            {{ product_variant.model }}
                        </p>            
                        {% if product_variant.stock == 'В наличии' %}
                            <div class="hits_slide__stock" data-color="green">В наличии</div> 
                            {% elseif product_variant.stock == 'Нет в наличии' %} 
                            <div class="hits_slide__stock" data-color="red">Нет в наличии</div> 
                            {% elseif product_variant.stock == 'Ожидание 2-3 дня' %} 
                            <div class="hits_slide__stock" data-color="blue">Ожидание 2-3 дня</div> 
                            {% elseif product_variant.stock == 'Предзаказ' %}
                            <div class="hits_slide__stock" data-color="blue">Предзаказ</div> 
                        {% endif %}


                        <div style="display: none;">
                        {% if product_variant.attrblock %}
                            {% for attrblockitem in product_variant.attrblock %}
                                {% if attrblockitem.attribute_group_id == 7 %}
                                <div class="attrs__size">
                                    <span class="attr__size-name">{{ attrblockitem.name }}</span>
                                    {% for attributeitem in attrblockitem.attribute %}
                                        {% if attributeitem.attribute_id == 16 %}
                                        <div class="attr__size-category shir">
                                            <p class="attr__size-name">{{ attributeitem.name }}</p>
                                            <p class="attr__size-cal">{{ attributeitem.text }}</p>
                                        </div>
                                        {% endif %}
                                        {% if attributeitem.attribute_id == 13 %}
                                        <div class="attr__size-category leng">
                                            <p class="attr__size-name">{{ attributeitem.name }}</p>
                                            <p class="attr__size-cal">{{ attributeitem.text }}</p>
                                        </div>
                                        {% endif %}
                                        {% if attributeitem.attribute_id == 14 %}
                                        <div class="attr__size-category heig-lin">
                                            <p class="attr__size-name">{{ attributeitem.name }}</p>
                                            <p class="attr__size-cal">{{ attributeitem.text }}</p>
