<section class="main-slider">
    <div class="main-slider__wrapper">
        <div class="main-slider__content">

            <div class="swiper main-slider__box">
                <div class="swiper-wrapper">
                    {% for banner in banners %}
                    <div class="swiper-slide main-slider__item">
                        {% if banner.link %}<a href="{{ banner.link }}"><img src="{{ banner.image }}" width="100%" height="100%" alt="{{ banner.title }}" /></a>{% else %}<img src="{{ banner.image }}" alt="{{ banner.title }}" width="100%" height="100%"/>{% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>

            <div class="sliders-arrows prev">
                <div class="arrow-prev">
                    <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.48209 3.01466e-07L6.57264 1.07928L2.93265 4.73116L14 4.73116L14 6.26884L2.93265 6.26884L6.57264 9.92072L5.48209 11L-1.24572e-06 5.5L5.48209 3.01466e-07Z" fill="#1F1F1F"/>
                    </svg>                              
                </div>
            </div>

            <div class="sliders-arrows next">
                <div class="arrow-next">
                    <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M8.51791 11L7.42736 9.92073L11.0673 6.26884L-2.7402e-07 6.26884L-2.06805e-07 4.73116L11.0673 4.73116L7.42736 1.07928L8.51791 3.7233e-07L14 5.5L8.51791 11Z" fill="#1F1F1F"/>
                    </svg>                             
                </div>
            </div>


        </div>
        <div class="main-slider_nav"></div>
    </div>
    <script>
        // первый главный слайдер
        let main_slider = new Swiper('.main-slider__box', {
            loop: true,
            pagination: {
                el: '.main-slider_nav',
                clickable: true,
            },
            autoplay: {
                delay: 8000,
            },
            navigation: {
                nextEl: '.main-slider__content .arrow-next',
                prevEl: '.main-slider__content .arrow-prev',
            },
        });
    </script>
</section>